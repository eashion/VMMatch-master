<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context=".conversation.IMConversationFragment"
    >
    <LinearLayout
        android:id="@+id/im_connection_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/vm_red_12"
        android:gravity="center_vertical"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="@dimen/vm_dimen_24"
            android:layout_height="@dimen/vm_dimen_24"
            android:layout_marginStart="@dimen/vm_margin_large"
            android:src="@drawable/im_ic_error"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/vm_padding_large"
            android:text="@string/im_connection_error_hint"
            />
    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/im_conversation_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!--展示会话列表-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/im_conversation_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            />
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>