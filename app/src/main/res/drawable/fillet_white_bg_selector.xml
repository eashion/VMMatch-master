<?xml version="1.0" encoding="utf-8"?><!-- The android:opacity=”opaque” line — this is critical in preventing a flash of black as your theme transitions. -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/vm_round_radius_large" />
            <solid android:color="@color/vm_white_87" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/vm_round_radius_large" />
            <solid android:color="@color/app_card_bg" />
        </shape>
    </item>
</selector>