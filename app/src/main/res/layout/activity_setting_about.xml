<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    tools:context=".ui.setting.AboutSettingActivity"
    >

    <!--定义顶部 TopBar-->
    <include layout="@layout/widget_common_top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_card_bg"
        android:orientation="vertical"
        >
        <com.vmloft.develop.library.tools.widget.VMLineView
            android:id="@+id/about_setting_check_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:vm_line_caption="V1.0.0"
            app:vm_line_right_icon="@drawable/im_ic_arrow_right"
            app:vm_line_title="@string/about_check_new"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/common_padding_large"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="在这里要感谢"
            style="@style/VMText.Title"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_normal"
            android:text="@string/about_thanks"
            />
    </LinearLayout>
</LinearLayout>